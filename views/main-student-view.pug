extends layout.pug

block navelements
  li.nav-item
    a.nav-link(href='/student/view') Find Students
  li.nav-item
    a.nav-link(href='/tutor/view/tutordetails/:tutor_id') View Profile
  li.nav-item
    a.nav-link(href='/tutor/view/viewtutorappointment/:tutor_id') View Appointments
  li.nav-item
    a.nav-link(href='/login') Logout

block content
  head
    style(type='text/css').
      .login-text {
      color: #f7be71;
      margin-top: 2em;
      font-size: 22px;
      }

  body
    p.login-text.text-center= message
    h2.mt-5=title
    .dropdown
      button.btn.btn-primary.dropdown-toggle(type='button', data-toggle='dropdown')
        | Filter by Subject
        span.caret
      ul.dropdown-menu
        input#myInput.form-control(type='text', placeholder='Filter by Subject')
        li
          a(href='/student/view/:student_english') English
        li
          a(href='/student/view/:student_history') History
        li
          a(href='/student/view/:student_calculus') Calculus
        li
          a(href='/student/view/:student_geometry') Geometry
        li
          a(href='/student/view/:student_algebra') Algebra 
        li
          a(href='/student/view/:student_cs') Computer Science
        li 
          a(href='/student/view/:student_biology') Biology
        li 
          a(href='/student/view/:student_chemistry') Chemistry
        li 
          a(href='/student/view/:student_physics') Physics
    table.table.table-striped.table-bordered(style='margin-top: 1.5em')
      thead
        tr
          th(scope='col') Student ID
          th(scope='col') Location
          th(scope='col') Grade
          th(scope='col') Subject
          th(scope='col') Availability
      tbody
        each student in students
          tr
            td
              a(href='/student/view/' + student.id)= student.user
            td=student.location
            td=student.grade
            td=student.subject
            td=student.availability
            
block scripts
  script(type='text/javascript' src='https://code.jquery.com/jquery-1.11.3.min.js')
  script.
     $(document).ready(function(){
      $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $(".dropdown-menu li").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
      });
      });
