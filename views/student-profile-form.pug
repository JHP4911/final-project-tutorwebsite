extends layout.pug

block links
  link(rel='stylesheet', href='https://formden.com/static/cdn/bootstrap-iso.css')
  link(rel='stylesheet', href='https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css')

block navelements
  li.nav-item
    a.nav-link(href='/login') Logout

block content
  h1.mt-5= title
  link(rel='stylesheet', href='https://formden.com/static/cdn/bootstrap-iso.css')
  link(rel='stylesheet', href='https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css')
  style.
    .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form{font-family: Arial, Helvetica, sans-serif; color: black}.bootstrap-iso form button, .bootstrap-iso form button:hover{color: white !important;} .asteriskField{color: red;}
  // HTML Form (wrapped in a .bootstrap-iso div)
  .bootstrap-iso
    .container-fluid
      .row
        .col-md-6.col-sm-6.col-xs-12
          form(method='post')
            .form-group
              label.control-label.requiredField(for='location')
                | Location
                span.asteriskField
                  | *
              .input-group
                .input-group-addon
                  i.fa.fa-map
                input#location.form-control(name='location', placeholder='Enter Location', type='text', value=student.location)
            .form-group
              label.control-label.requiredField(for='grade')
                | Grade
                span.asteriskField
                  | *
              select#grade.select.form-control(name='grade', value=student.grade)
                option(value='9th')
                  | 9th
                option(value='10th')
                  | 10th
                option(value='11th')
                  | 11th
                option(value='12th')
                  | 12th
              span#hint_grade.help-block
                | Please enter what grade you are in.
            .form-group
              label.control-label.requiredField(for='subject')
                | Subject
                span.asteriskField
                  | *
              select#subject.select.form-control(name='subject', value=student.subject)
                option(value='English')
                  | English
                option(value='History')
                  | History
                option(value='Calculus')
                  | Calculus
                option(value='Geometry')
                  | Geometry
                option(value='Algebra')
                  | Algebra
                option(value='Computer Science')
                  | Computer Science
                option(value='Biology')
                  | Biology
                option(value='Chemistry')
                  | Chemistry
                option(value='Physics')
                  | Physics
              span#hint_subject.help-block
                | Please select the subject you need help with.
            .form-group
              label.control-label.requiredField(for='availability')
                | Availability
                span.asteriskField
                  | *
              select#availability.select.form-control(name='availability', value=student.availability)
                option(value='Monday')
                  | Monday
                option(value='Tuesday')
                  | Tuesday
                option(value='Wednesday')
                  | Wednesday
                option(value='Thursday')
                  | Thursday
                option(value='Friday')
                  | Friday
                option(value='Saturday')
                  | Saturday
                option(value='Sunday')
                  | Sunday
              span#hint_availability.help-block
                | Please select when you are available.
            .form-group
              div
                button.btn.btn-primary(name='submit', type='submit')
                  | Submit Profile
