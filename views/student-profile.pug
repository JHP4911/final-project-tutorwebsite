extends layout.pug

block links
  link(rel='stylesheet', href='../views/styles.css')

block navelements
  li.nav-item
    a.nav-link(href='/login') Logout

block content
  .container
  .row
    .col-md-5.toppad.pull-right.col-md-offset-3
        a(href='/student/view/viewstudentprofile/:student_id/update') Edit Profile
        a(href='/student/view/viewstudentprofile/:student_id/delete') Delete Profile
        br
    .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
      .panel.panel-info
        .panel-heading
          p
          h3.mt-5 My Student Profile
        .panel-body
          .row
            .col-md-3.col-lg-3(align='center')
              img.img-circle.img-responsive(alt='Find My Tutor Logo', src='https://github.com/tutorwebsite/final-project-tutorwebsite/blob/master/images/findmytutorlogo.png?raw=true', width='140')
            .col-md-9.col-lg-9
              table.table.table-student-information
                tbody
                  tr
                    td Student Name:
                    td=student.first + " " + student.last
                  tr
                    td Location:
                    td=student.location
                  tr
                    td Grade:
                    td=student.grade
                  tr
                  tr
                    td Subject:
                    td=student.subject
                  tr
                  tr
                    td Availability:
                    td=student.availability
                  tr
              a.btn.btn-dark(href='#' style="margin-right: 1.5em") Update Profile
              a.btn.btn-danger(href='#' style="margin-right: 1.5em") Delete Profile
              a.btn.btn-secondary(onclick='goBack()', style="color: white") Back
              script.
                function goBack() {
                window.history.back();
                }
