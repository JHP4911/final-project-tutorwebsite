extends layout.pug

block navelements
  li.nav-item
    a.nav-link(href='/login') Logout

block content
  .container
    .row
      .col-md-5.toppad.pull-right.col-md-offset-3
        a(href='/tutor/view/viewtutorprofile/:tutor_id/update') Edit Profile
        a(href='/tutor/view/viewtutorprofile/:tutor_id/delete') Delete Profile
        br
      .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
        .panel.panel-info
          .panel-heading
            p
            h3.mt-5 My Tutor Profile
          .panel-body
            .row
              .col-md-3.col-lg-3(align='center')
                img.img-circle.img-responsive(alt='Find My Tutor Logo', src='https://github.com/tutorwebsite/final-project-tutorwebsite/blob/master/images/findmytutorlogo.png?raw=true', width='140')
              .col-md-9.col-lg-9
                table.table.table-tutor-information
                  tbody
                    tr
                      td Tutor Name:
                      td=tutor.first + " " + tutor.last
                    tr
                      td Location:
                      td=tutor.location
                    tr
                      td Grade:
                      td=tutor.grade
                    tr
                    tr
                      td Subject:
                      td=tutor.subject
                    tr
                      td Availability:
                      td=tutor.availability
                    tr
                    tr
                      td Rating:
                      td=tutor.rate
                    tr
                form(action='/tutor/profile/update/' + tutor.username, method="get")
                  .form-group
                    button.btn.btn-dark(style="margin-right: 1.5em") Update Profile
                form(action='/tutor/profile/remove/' + tutor.username, method="post")
                  .form-group
                    button.btn.btn-danger(style="margin-right: 1.5em" type=submit) Delete Profile
                .btn.btn-secondary(onclick='goBack()', style="color: white") Back
                script.
                  function goBack() {
                  window.history.back();
                  }
